<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="biz.zphu.activity_first.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/passButton6"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginLeft="136dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="316dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mores " />

    <Button
        android:id="@+id/passButton7"
        android:layout_width="89dp"
        android:layout_height="53dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="324dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Fun" />

    <Button
        android:id="@+id/passButton8"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="252dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Login " />

    <Button
        android:id="@+id/passButton9"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="104dp"
        android:onClick="sendMessage"
        android:text="@string/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textBox2"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:hint="@string/enter_your_message"
        android:inputType=""
        app:layout_constraintBottom_toTopOf="@+id/passButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/passButton10"
        android:layout_width="90dp"
        android:layout_height="53dp"

        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="252dp"
        android:onClick="movieinfo"
        android:text="@string/Movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Go movie " />

</android.support.constraint.ConstraintLayout>