<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/passButton5"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="184dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox"
        tools:text="Mores " />

    <Button
        android:id="@+id/passButton3"
        android:layout_width="89dp"
        android:layout_height="53dp"
        android:layout_marginTop="184dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox"
        tools:text="Fun" />

    <Button
        android:id="@+id/passButton4"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="120dp"
        android:text="@string/go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox"
        tools:text="Login " />

    <Button
        android:id="@+id/passButton2"
        android:layout_width="320dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:text="@string/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox"
        tools:text="Let go " />

    <EditText
        android:id="@+id/textBox"
        android:layout_width="320dp"
        android:layout_height="34dp"
        android:hint="@string/enter_your_message"
        android:inputType=""
        app:layout_constraintBottom_toTopOf="@+id/passButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/passButton"
        android:layout_width="90dp"
        android:layout_height="53dp"

        android:layout_marginTop="120dp"
        android:onClick="movieinfo"
        android:text="@string/Movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox"
        tools:text="Go movie " />

    <android.support.v7.widget.GridLayout
        android:layout_width="368dp"
        android:layout_height="209dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="97dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>